pipeline{
    agent any
    stages{
        stage("Code Fetch")
        {
            steps{
                git url: "https://github.com/bhumika-16/SPE-Calculator-Java.git" ,branch:"master"
            }
        }
        stage("Build and Test Maven")
        {
            steps{
              sh "mvn clean install"
            }
        }
        stage("Build Docker Image")
        {
            steps{
                sh "docker build -t calculator-java ."
            }
        }
        stage("Push Docker Images")
        {
            steps{
                withCredentials([usernamePassword(credentialsId:"DockerHubCred",passwordVariable:"dockerpassword",usernameVariable:"dockerusername")]){

                    sh "docker login -u ${env.dockerusername} -p ${env.dockerpassword}"
                    sh "docker tag calculator-java  ${env.dockerusername}/calculator-java"
                    sh "docker push ${env.dockerusername}/calculator-java"

                }
            }

        }
        stage("Deploy on Ansible Playbook")
        {
            steps{
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',
                        inventory: 'inventory'
                        )
                }
            }
        }
}
    post{
        always{
            mail to: "bhumikajindal2014@gmail.com",
            subject: "Jenkins Calculator Project",
            body: "Project built now..."
        }
    }
}